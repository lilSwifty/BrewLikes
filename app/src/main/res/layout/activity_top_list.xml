<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/topListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onItemClick">

        <TextView
            android:id="@+id/beerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:layout_toEndOf="@+id/beerImage"
            android:textSize="30dp"
            android:textColor="@color/beer"/>

        <!--TODO change pic to beer picture, evt ta bort maxWidth, maxHeight och adjustViewBounds-->
        <ImageView
            android:id="@+id/beerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/beer"
            android:adjustViewBounds="true"
            android:maxWidth="80dp"
            android:maxHeight="80dp"/>

        <TextView
            android:id="@+id/rankedNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/beerImage"
            android:layout_alignBottom="@id/beerImage"
            android:layout_alignEnd="@id/beerImage"
            android:text="10"
            android:textColor="@color/beer"
            />
    </RelativeLayout>
    </android.support.v7.widget.CardView>

