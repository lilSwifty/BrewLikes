<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<ListView
        android:id="@+id/beerTopList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        -->

    <android.support.v7.widget.CardView
        android:id="@+id/topListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onItemClick">
        <!--app:cardCornerRadius="20dp"-->

        <!-- android:layout_marginLeft="8dp"
    -->

        <!--TODO change pic to beer picture, evt ta bort maxWidth, maxHeight och adjustViewBounds-->
        <ImageView
            android:id="@+id/beerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:maxHeight="70dp"
            android:maxWidth="70dp"/>
        <!--app:srcCompat="@drawable/beer"-->

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:text="9.5"
            android:textColor="@color/beer" />


        <TextView
            android:id="@+id/beerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/beerImage"
            android:text="TextView"
            android:textColor="@color/beer"
            android:textSize="30sp" />


    </android.support.v7.widget.CardView>
    <!--</ListView>-->

</android.support.constraint.ConstraintLayout>