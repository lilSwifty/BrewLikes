<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<ListView
        android:id="@+id/beerTopList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        -->

    <android.support.v7.widget.CardView
        android:id="@+id/topListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--app:cardCornerRadius="20dp"-->

        <!-- android:layout_marginLeft="8dp"
    -->
        <ImageView
            android:id="@+id/beerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:maxHeight="70dp"
            android:maxWidth="70dp"
            android:foregroundGravity="clip_horizontal"
            android:contentDescription="@string/beerPic" />
        <!--app:srcCompat="@drawable/beer"
        android:layout_marginLeft="8dp"-->

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="9.5"
            android:textColor="@color/beer" />


        <TextView
            android:id="@+id/beerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/beerImage"
            android:fontFamily="sans-serif"
            android:text="TextView"
            android:textAllCaps="true"
            android:textColor="@color/beer"
            android:textSize="25sp" />


    </android.support.v7.widget.CardView>
    <!--    android:fontFamily="sans-serif"
            android:textColor="@color/blackbrew"
            android:textAllCaps="true"
            android:textSize="30sp"-->

</android.support.constraint.ConstraintLayout>